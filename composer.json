{
  "name": "openeuropa/code-review",
  "description": "OpenEuropa code review component.",
  "license": "EUPL-1.2",
  "require": {
    "php": ">=8.0",
    "drupal/coder": "^8.3.16",
    "phpmd/phpmd" : "^2.12",
    "phpro/grumphp": "^1.1",
    "squizlabs/php_codesniffer": "^3.6",
    "amphp/parallel-functions": "~1.0.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.4"
  },
  "autoload": {
    "psr-4": {
      "OpenEuropa\\CodeReview\\": "./src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "OpenEuropa\\CodeReview\\Tests\\": "./tests/"
    }
  },
  "extra": {
    "_readme": [
        "Explicit requirement for amphp/parallel-functions because release 1.1.0 causes serialisation errors."
    ]
  },
  "scripts": {
    "changelog": "docker run --rm -v \"$(pwd):$(pwd)\" -w $(pwd) muccg/github-changelog-generator openeuropa/code-review -t $CHANGELOG_GITHUB_TOKEN --future-release=$CHANGELOG_FUTURE_RELEASE --release-branch=1.x"
  },
  "config": {
    "allow-plugins": {
      "phpro/grumphp": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
